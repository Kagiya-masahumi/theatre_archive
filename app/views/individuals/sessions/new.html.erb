<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        個人専用ログイン画面
      </h1>
    </div>
    <%= link_to "劇団でのログインはこちら",new_group_session_path,class: "button is-success" %>
  </div>
</section>

<div>
  
</div>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %>
            <p class="control has-icon-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder => "メールアドレス",class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-evelope"></i>
              </span>
            </p>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <p class="control has-icon-left">
              <%= f.password_field :password, autocomplete: "current-password",:placeholder => "パスワード", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>  
              </span>
            </p>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: "button is-success"%>
          </div>
        <% end %>     

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>



